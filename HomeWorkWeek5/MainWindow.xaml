<Window x:Class="HomeWorkWeek5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkWeek5"
        mc:Ignorable="d"
        Title="BMI" Height="450" Width="800" Background="#FFF0E6E6">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="380" Name ="TempCanvas" Margin="22,22,0,0" VerticalAlignment="Top" Width="743">
            <TextBox x:Name= "WeightTextBox" Height="23" Canvas.Left="180" TextWrapping="Wrap" Text="" Canvas.Top="107" Width="120"/>
            <TextBox x:Name= "HeightTextBox" Height="23" Canvas.Left="180" TextWrapping="Wrap" Text="" Canvas.Top="174" Width="120"/>
            <Label x:Name="Heightlabel" Content="Height" Canvas.Left="115" Canvas.Top="107"/>
            <Label x:Name="Weightlabel" Content="Weight" Canvas.Left="115" Canvas.Top="171" RenderTransformOrigin="-4.703,2.496"/>
            <Button x:Name="BMIButton" Content="Press for BMI" Canvas.Left="400" Canvas.Top="143" Width="183" Click="BMIButton_Click" Background="#FFF3EEED"/>
        </Canvas>


    </Grid>
</Window>
